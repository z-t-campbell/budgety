<%  if user_signed_in?%>
    <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
      <%= link_to root_path, class: "navbar-brand" do%>
        <img src=<%= asset_url("budgety_logo.png") %> >
      <% end %>




    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <%= link_to 'Book an experience', new_user_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to 'Become a host', new_organisation_path, class: "nav-link" %>
        </li>




        <li class="nav-item dropdown">
          <% if current_user.photo.attached?%>
            <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: {toggle: "dropdown"} %>
          <% else %>
            <%= image_tag "blank_avatar.jpg", alt: "alttext" %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to 'Account', edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to 'Log-out', destroy_user_session_path,  method: :delete, class: "dropdown-item" %>
          </div>
        </li>


        <li class="nav-item">
          <p> Hi <%= current_user.first_name%>! </p>
        </li>

      </ul>

    </div>
  </div>




<%else %>
  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
      <%= link_to root_path, class: "navbar-brand" do%>
        <img src=<%= asset_url("budgety_logo.png") %> >
      <% end %>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to 'Log-in', new_user_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to 'Sign-up', new_user_registration_path, class: "nav-link" %>
        </li>
      </ul>
    </div>

  </div>
<%end%>
