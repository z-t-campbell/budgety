<div class="text-center">
  <h1>Bookings</h1>
</div>

<% if current_user.orders.any?%>
  <div class="container">
    <div class="row justify content-center">
      <div class="col-6 col-lg-6 my-4 p-1">
        <div class="card" style="width: 28rem;, height: 28rem;">
          <div class="text-center">
            <div class="card-body">
              <%current_user.orders.each do |order|%>
                  <h1><%= order.experience.name%></h1>
                  <h4>Location: <%= order.experience.location%></h4>
                  <h5>Date: <%= order.experience.date.strftime('%d-%m-%Y') %></h5>
                  <h5>Start time: <%= order.experience.start_time.strftime('%H:%M') %></h5>
                  <h5>End time: <%= order.experience.end_time.strftime('%H:%M') %></h5>
                  <h5>Amount: <%= humanized_money_with_symbol(order.experience.price) %></h5>
                  <% order.experience.photos.each do |photo| %>
                    <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill%>
                  <%end%>
                  <% if order.experience.reviews.any? %>
                    <div>
                      <% review = order.experience.reviews.last%>
                          <p><%=review.title%></p>
                          <p><%=review.content%></p>
                          <% if review.user.photo.attached?%>
                            <%= cl_image_tag review.user.photo.key, class: 'avatar-large' %>
                          <%else%>
                           <%= cl_image_tag "https://res.cloudinary.com/dmwa29qvx/image/upload/w_1000,c_fill,ar_1:1,g_auto,r_max,bo_5px_solid_red,b_rgb:262c35/v1584042777/profil2_unizy0.jpg", class: 'avatar-large'%>
                          <%end%>
                          <p><%=review.user.first_name%></p>
                          <%review.rating.times do %>
                             <i class="fas fa-star"></i>
                          <%end%>
                    </div>
                  <%else%>
                      <%= link_to "Add a Review", new_order_review_path(order), :class => "btn btn-primary"%>
                  <%end%>
              <%end%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

<%else%>
 <h1><%= You have no bookings%></h1>
<%end%>

