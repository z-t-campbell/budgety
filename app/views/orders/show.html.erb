<div class="d-flex align-items-start">
  <div class="col-md-6 col-lg-8">
    <div class="card-payment">
      <div class="card-payment-box">
          <small><span class="badge badge-danger btn-lg btn-block"><h5><%= @order.state %></h4></span></small>
          <ul class="list-unstyled">
          <div class="card-payment-info">
            <li><strong>ISSUED ON</strong> <%= @order.created_at.to_date.strftime('%d-%m-%Y') %></li>
            <li><strong>EXPERIENCE</strong> <%= @order.experience.name %></li>
            <p><strong>Venue: </strong> <%= @order.experience.venue_name%></p>
            <p><strong>Location: </strong> <%= @order.experience.location%></p>
            <p><strong>Date: </strong><%= @order.experience.date.strftime('%d-%m-%Y') %></p>
            <p><strong>Time: </strong> <%= @order.experience.start_time.strftime('%H:%M')%> to <%=@order.experience.end_time.strftime('%H:%M') %></p>
            <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @order.amount %></li>
            </li>
          </ul>
            <div><%= cl_image_tag @order.experience.photos.first.key, width: '100%', class: "card-payment-show-photo" %></div>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>

