<div class="container">
  <div class="row justify content-center">
    <div class="col-6 col-lg-6 my-4 p-1">
        <div class="d-flex mx-auto" style="width: 28rem;, height: 28rem;">
          <div class="card d-flex mx-auto">
        <div class="text-center">
          <div class="card-body">
            <div class="text-center">
              <h1>Checkout summary</h1>
              <div><%= cl_image_tag @order.experience.photos.first.key, width: '100%' %></div>
              <h4>Venue: <%= @order.experience.venue_name%></h4>
              <h4>Location: <%= @order.experience.location%></h4>
              <h5>Date: <%= @order.experience.date.strftime('%d-%m-%Y') %></h5>
              <h5>Start time: <%= @order.experience.start_time.strftime('%H:%M') %></h5>
              <h5>End time: <%= @order.experience.end_time.strftime('%H:%M') %></h5>
              <p>Purchase of <strong><%= @order.experience.name %></strong> for <strong><%= humanized_money_with_symbol @order.amount %></strong></p>
              <button id="pay" class="btn btn-danger btn-block">Pay</button>
              <script src="https://js.stripe.com/v3/"></script>
              <script>
              const paymentButton = document.getElementById('pay');
              paymentButton.addEventListener('click', () => {
              const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
              stripe.redirectToCheckout({
              sessionId: '<%= @order.checkout_session_id %>'
            });
          });
            </script>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
